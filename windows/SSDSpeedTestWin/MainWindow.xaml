<Window x:Class="SSDSpeedTestWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSDSpeedTestWin"
        xmlns:models="clr-namespace:SSDSpeedTestWin.Models"
        mc:Ignorable="d"
        Title="SSD Speed Test" Height="500" Width="600"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    
    <Window.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter" />

        <Style x:Key="StatusTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Idle">
                    <Setter Property="Background" Value="#33EAB308" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Testing">
                    <Setter Property="Background" Value="#33F97316" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Success">
                    <Setter Property="Background" Value="#3322C55E" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Error">
                    <Setter Property="Background" Value="#33EF4444" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SlimProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#10FFFFFF" />
            <Setter Property="Foreground" Value="{Binding Status, Converter={StaticResource StatusToColorConverter}}" />
            <Setter Property="Height" Value="3" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Rectangle x:Name="PART_Indicator" HorizontalAlignment="Left" Fill="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1C1C1C" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="Transparent" Padding="15,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button Click="Close_Click" Background="Transparent" BorderThickness="0" Padding="0">
                            <Ellipse Fill="#FF5F57" Width="12" Height="12" Margin="0,0,8,0"/>
                        </Button>
                        <Ellipse Fill="#FFBD2E" Width="12" Height="12" Margin="0,0,8,0"/>
                        <Ellipse Fill="#28C940" Width="12" Height="12"/>
                    </StackPanel>
                    
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0" 
                            Foreground="White" Opacity="0.6" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Click="Refresh_Click"/>
                </Grid>
            </Border>

            <!-- List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding VolumeStates}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:VolumeTestState}">
                            <Border Background="#0DFFFFFF" CornerRadius="12" Margin="10,5" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" Opacity="0.6" 
                                                       VerticalAlignment="Center" Margin="0,0,8,0" FontSize="16"/>
                                            <TextBlock Text="{Binding DriveName}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <Border Style="{StaticResource StatusTagStyle}">
                                                <TextBlock Text="{Binding Status}" FontSize="9" FontWeight="Bold" 
                                                           Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Border>
                                            <TextBlock Text="{Binding Progress, StringFormat={}{0:P0}}" FontSize="11" FontWeight="Bold" 
                                                       Foreground="White" Opacity="0.4" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Progress Bar -->
                                        <ProgressBar Value="{Binding Progress, Mode=OneWay}" Minimum="0" Maximum="1" 
                                                     Style="{StaticResource SlimProgressBarStyle}"
                                                     Margin="0,8,40,0" />

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <StackPanel Margin="0,0,20,0">
                                                <TextBlock Text="WRITE" FontSize="8" FontWeight="Bold" Foreground="White" Opacity="0.3"/>
                                                <TextBlock Text="{Binding WriteSpeed, StringFormat={}{0:N0} MB/s}" FontSize="13" FontWeight="Medium" Foreground="#CCFFFFFF"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="READ" FontSize="8" FontWeight="Bold" Foreground="White" Opacity="0.3"/>
                                                <TextBlock Text="{Binding ReadSpeed, StringFormat={}{0:N0} MB/s}" FontSize="13" FontWeight="Medium" Foreground="#CCFFFFFF"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Play Button -->
                                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Click="RunTest_Click">
                                        <Grid Width="40" Height="40">
                                            <Ellipse Stroke="White" StrokeThickness="3" Opacity="0.1"/>
                                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                                       FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
